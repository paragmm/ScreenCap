{
    "manifest_version": 3,
    "name": "ScreenCap",
    "version": "1.0",
    "description": "Premium screenshot capture tool with editing capabilities.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "editor.html",
                "editor.js",
                "editor.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}